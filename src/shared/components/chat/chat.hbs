<div class="chat-preview-block">
  <div class="companion-block">
    <div class="companion-info">
      {{{avatar}}}
      <span class="companion-name">{{{title}}}</span>
    </div>
    {{{modal}}}
  </div>
  <div class="current-chat">
    {{#each messages}}
       <div class="msg-wrapper {{#if this.isMine}}user-msg{{/if}}">
          <div class="msg-block">
              <div class="msg-content">{{this.content}}</div>
              <div class="msg-time">{{this.time}}</div>
          </div>
       </div>
    {{/each}}
  </div>
  <div class="new-message-block">
    <button class="new-msg-button add-file"></button>
    <form>
      {{{sendMsgInput}}}
    </form>
    {{{sendMessageBth}}}
  </div>
</div>
